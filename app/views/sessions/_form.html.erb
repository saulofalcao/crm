			<%= f.label :email, "E-mail", class: 'control-label' %>
			<%= f.text_field :email, class: 'form-control' %>
		</div>
		
		<div class="form-group">
			<%= f.label :password, "Senha", class: 'control-label' %>
			<%= f.password_field :password, class: 'form-control' %>
