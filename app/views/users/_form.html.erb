<div class="row">
<div class="col-md-6 col-md-offset-3">
		<%= render 'shared/error_messages' %>
		<%= form_for @user, html: { class: "form-horizontal" } do |f| %>
			<%= f.label :nome, class: "control-label col-sm-2" %>
			<%= f.text_field :nome, class: "form-control col-sm-10" %>

			<%= f.label :email,"E-mail", class: "control-label col-sm-2" %>
			<%= f.text_field :email, class: "form-control" %>

			<%= f.label :password, "Senha", class: "control-label col-sm-2" %>
			<%= f.password_field :password, class: "form-control" %>

			<%= f.label :password_confirmation, "Confirmação da Senha", class: "control-label col-sm-2" %>
			<%= f.password_field :password_confirmation, class: "form-control" %>

			<%= f.submit "Cadastrar", class: "btn btn-large btn-primary" %>

			<% end %>

		</div>
</div>
